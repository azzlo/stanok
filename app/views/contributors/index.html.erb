<div class="container">

  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col s1 m1"></div>
    <div class="center-align col s10 m10"><h2>Colaboradores</h2></div>
    <div class="col s1 m1 center-align"><a href= "<%= new_contributor_path %>" class="btn-floating btn-large waves-effect waves-light red"> <i class="material-icons">add</i></a></div>
  </div>
  <br>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Telefono</th>
        <th>Caracteristicas y habilidades</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contributors.each do |contributor| %>
        <tr>
          <td>
            <a href="<%= contributor_path contributor %>" class="bold"><h5 class="bold no-margin"><%= contributor.name %></h5></a>
          </td>
          <td><%= contributor.email %></td>
          <td><%= contributor.phone %></td>
          <td><%= contributor.skills %></td>
          <td>
            <%= link_to '<i class="small material-icons">delete_forever</i>'.html_safe, contributor, method: :delete, data: { confirm: 'Esta seguro de querer eliminar?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<br>

</div>
