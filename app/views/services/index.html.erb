<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Services</h1>

  <table>
    <thead>
      <tr>
        <th>Client name</th>
        <th>Customer contact information</th>
        <th>Title</th>
        <th>Type</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Execution date</th>
        <th>Status</th>
        <th>Business gain</th>
        <th>Conclusions</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.client_name %></td>
          <td><%= service.customer_contact_information %></td>
          <td><%= service.title %></td>
          <td><%= service.type %></td>
          <td><%= service.description %></td>
          <td><%= service.amount %></td>
          <td><%= service.execution_date %></td>
          <td><%= service.status %></td>
          <td><%= service.business_gain %></td>
          <td><%= service.conclusions %></td>
          <td><%= link_to 'Show', service %></td>
          <td><%= link_to 'Edit', edit_service_path(service) %></td>
          <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Service', new_service_path %>

</div>
