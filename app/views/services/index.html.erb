<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col s1 m1"></div>
    <div class="center-align col s10 m10 light-blue-text text-darken-4"><h3>Servicios</h3></div>
    <div class="col s1 m1 center-align"><a href= "<%= new_service_path %>" class="btn-floating btn-large waves-effect waves-light light-blue accent-4"> <i class="material-icons white-text">add</i></a></div>
  </div>


  <table>
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Tipo de Servicio</th>
        <th>Costo</th>
        <th>Fecha de ejecucion</th>
        <th>Estado</th>
        <th>Conclusiones</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= link_to service.client_name,  service %></td>
          <td><%= service.service_type %></td>
          <td><%= service.amount %></td>
          <td><%= service.execution_date %></td>
          <td><%= service.status %></td>
          <td><%= service.conclusions %></td>

          <td><%= link_to '<i class="small material-icons brown-text text-lighten-2">edit_mode</i>'.html_safe, edit_service_path(service) %></td>
          <td><%= link_to '<i class="small material-icons brown-text text-lighten-2">delete_forever</i>'.html_safe, service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
