<div class="container">
  <p id="notice"><%= notice %></p>

  <h2>Proyeto</h2>

  <table>
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Nombre</th>
        <th>Descripci√≤n</th>
        <th>Fecha de inicio</th>
        <th>Fecha de entrega</th>
        <th>Costo total</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= Client.find(project.client).name %></td>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.initial_date %></td>
          <td><%= project.final_date %></td>
          <td><%= project.total_cost %></td>
          <td><%= ProjectStatus.find(project.project_status_id).name %></td>
          <td>
            <a class="waves-effect waves-light btn"<%= link_to 'Mostrar', project %></a>
            </td>
          <td>
            <a class="waves-effect waves-light btn"<%= link_to 'Editar', edit_project_path(project) %></a></td>
          <td>
            <a class="waves-effect waves-light btn"<%= link_to 'Eliminar', project, method: :delete, data: { confirm: 'Esta seguro de querer eliminar?' } %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <a class="waves-effect waves-light btn"<%= link_to 'Nuevo proyecto', new_project_path %>
</a>


</div>
