<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col s1 m1"></div>
    <div class="center-align col s10 m10"><h1>Proyectos</h1></div>
    <div class="col s1 m1 center-align"><a href= "<%= new_project_path %>" class="btn-floating btn-large waves-effect waves-light red"> <i class="material-icons">add</i></a></div>
  </div>


  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Cliente</th>
        <th>Inicio</th>
        <th>Entrega</th>
        <th>Costo</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>

        <tr>
          <td>
            <a href="<%= project_path project %>" class="bold"><h5 class="bold no-margin"><%= project.name %></h5></a>
          </td>
          <td><%= Client.find(project.client).name %></td>
          <td><%= project.initial_date %></td>
          <td><%= project.final_date %></td>
          <td><%= project.total_cost %></td>
          <td class="green-text"><%= ProjectStatus.find(project.project_status_id).name %></td>
          <td> </td>
          <td> </td>
          <td>
            <%= link_to '<i class="small material-icons">delete_forever</i>'.html_safe, project, method: :delete, data: { confirm: 'Esta seguro de querer eliminar?' } %>
          </td>
        </tr>


      <% end %>


    </tbody>
  </table>

  <br>



</div>
