<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Proyeto</h1>

  <table>
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Nombre</th>
        <th>Descripci√≤n</th>
        <th>Fecha de inicio</th>
        <th>Fecha de entrega</th>
        <th>Costo total</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.client %></td>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.initial_date %></td>
          <td><%= project.final_date %></td>
          <td><%= project.total_cost %></td>
          <td><%= link_to 'Mostrar', project %></td>
          <td><%= link_to 'Editar', edit_project_path(project) %></td>
          <td><%= link_to 'Eliminar', project, method: :delete, data: { confirm: 'Esta seguro de querer eliminar?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo proyecto', new_project_path %>



</div>
