      <p class="alert orange-text text-accent-4"><%= alert %></p>
    <% end %>

    <%= yield %>

    <footer class="page-footer grey darken-3">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h6 class="bold white-text">STANOK System, pienzalo y azzlo!</h6>
          </div>

        </div>
      </div>
