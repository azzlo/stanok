          </ul>
          <ul id="slide-out" class="side-nav">
            <li>
              <div class="userView">
              <img class="background" src="images/office.jpg">
            </div>
          </li>
          <li><div class="divider"></div></li>
          <li class="<%= active_if controller: 'welcome' %>"><%= link_to "Inicio", root_path %></li>
