<div class="container">
  <p id="notice"><%= notice %></p>

  <h2 class="center-align">Usuarios del sistema</h2>
  <br>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.state %></td>
          <td><%= link_to 'Mostrar', user %></td>
          <td><%= link_to 'Editar', edit_user_path(user) %></td>
          <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Estas seguro de eliminar?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <br>
  <a class="waves-effect waves-light btn"<%= link_to 'Nuevo Usuario', new_user_path %></a>
</div>
