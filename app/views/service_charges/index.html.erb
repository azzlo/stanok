<h1>Service Charges</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Description</th>
      <th>Service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_charges.each do |service_charge| %>
      <tr>
        <td><%= service_charge.amount %></td>
        <td><%= service_charge.description %></td>
        <td><%= service_charge.service %></td>
        <td><%= link_to 'Show', service_charge %></td>
        <td><%= link_to 'Edit', edit_service_charge_path(service_charge) %></td>
        <td><%= link_to 'Destroy', service_charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service Charge', new_service_charge_path %>
