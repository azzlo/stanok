<div class="container">

  <p id="notice"><%= notice %></p>

  <h3 class="center-align light-blue-text text-darken-4">Egresos</h3>


  <table>
    <thead>
      <tr>
        <th>Amount</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @financial_expenses.each do |financial_expense| %>
      <tr>
        <td><%= financial_expense.amount %></td>
        <td><%= financial_expense.description %></td>
        <td><%= link_to 'Show', financial_expense %></td>
        <td><%= link_to 'Edit', edit_financial_expense_path(financial_expense) %></td>
        <td><%= link_to 'Destroy', financial_expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Financial Expense', new_financial_expense_path %>
</div>
