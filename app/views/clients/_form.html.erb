        <%= f.label :Nombre_de_contacto, for: :client_contact_name %>
        <%= f.text_field :contact_name %>
      </div>
    </div>

    <div class="row">
      <div class="field input-field col s12 m6">
        <i class="material-icons prefix">call</i>
        <%= f.label :Telefono, for: :client_phone %>
        <%= f.text_field :phone %>
      </div>

      <div class="field input-field col s12 m6 l6">
        <i class="material-icons prefix">email</i>
        <%= f.label :Correo_electronico, for: :client_email %>
        <%= f.text_field :email %>
      </div>
    </div>
