        <i class="material-icons prefix">center_focus_strong</i>
        <%= f.label :latitude, 'Latitud' %>
        <%= f.text_field :latitude %>
      </div>
      <div class="input-field col s6">
        <i class="material-icons prefix">center_focus_strong</i>
        <%= f.label :longitude, 'Longitud' %>
