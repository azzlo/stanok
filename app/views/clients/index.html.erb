<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col s1 m1"></div>
    <div class="center-align col s10 m10 light-blue-text text-darken-4"><h3>Clientes</h3></div>
    <div class="col s1 m1 center-align"><a href= "<%= new_client_path %>" class="btn-floating btn-large waves-effect waves-light light-blue accent-4"> <i class="material-icons white-text">add</i></a></div>
  </div>
<br>
  <table class="highlight bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Contacto</th>
        <th>Telefono</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td>
            <a href="<%= client_path client %>" class="bold"><h5 class="bold no-margin"><%= client.name %></h5></a>
            <span class="grey-text"><%= client.address %></span>
          </td>

          <td><%= client.contact_name %></td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
          <td>
            <%= link_to '<i class="small material-icons red-text text-accent-1">delete_forever</i>'.html_safe, client, method: :delete, data: { confirm: 'Esta seguro de querer eliminar?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
