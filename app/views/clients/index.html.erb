<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col s1 m1"></div>
    <div class="center-align col s10 m10"><h2>Clientes</h2></div>
    <div class="col s1 m1 center-align"><a href= "<%= new_client_path %>" class="btn-floating btn-large waves-effect waves-light red"> <i class="material-icons">add</i></a></div>
  </div>
<br>
  <table class="highlight bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Contact name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td>
            <a href="<%= client_path client %>" class="bold"><h5 class="bold no-margin"><%= client.name %></h5></a>
          </td>

          <td><%= client.contact_name %></td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
          <td><%= client.address %></td>

          <td>
            <%= link_to '<i class="small material-icons">delete_forever</i>'.html_safe, client, method: :delete, data: { confirm: 'Esta seguro de querer eliminar?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
